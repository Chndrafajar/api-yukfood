<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/order" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img src="https://api-yukfood.cyclic.app/<%= order.payments.proofPayment %>" alt="image" style="width: 100%; display: block" />

        <div class="row ml-1">
          <% if(order.payments.status == 'Proses') {%>

          <form action="/admin/order/<%= order.id %>/confirmation?_method=PUT" method="POST">
            <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i>
              Confirmation
            </button>
          </form>
          <form action="/admin/order/<%= order.id %>/reject?_method=PUT" method="POST" class="ml-2">
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= order.memberId.firstName %> <%= order.memberId.lastName %></td>
                <td>$ <%= order.total %></td>
                <td><%= order.payments.bankFrom %></td>
                <td><%= order.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
